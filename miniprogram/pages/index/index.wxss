.game {
  width: 100vw;
  height: 100vh;
}

.game .layer {
  width: 100%;
  height: 100%;
  background: #999;
}

.game .layer .card {
  width: 50px;
  height: 50px;
  border-radius: 6px;
  border: 2px solid #069;
  background-color: white;
}

.cover-left {
  font-size: 30px;
  background-color: black;
  color: white;
  top: 400px;
  left: 0;
  width: 60px;
  height: 60px;
  text-align: center;
  line-height: 60px;
  position: absolute;
}

.cover-right {
  font-size: 30px;
  background-color: black;
  color: white;
  top: 400px;
  right: 0;
  width: 60px;
  height: 60px;
  text-align: center;
  line-height: 60px;
  position: absolute;
}

.track01 {
  height: 85px;
  width: 100%;
  background: red;
}

.track02 {
  height: 85px;
  width: 100%;
  background: blue;
}

.track03 {
  height: 85px;
  width: 100%;
  background: green;
}

.type {
  box-sizing: border-box;
  width: 85px;
  height: 85px;
  background-color: white;
  border: 4px solid #dadade;
}
